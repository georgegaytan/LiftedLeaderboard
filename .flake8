[flake8]
max-line-length = 88
extend-ignore = E203, W503, D100, D101, D102, D103, D104, D107, D400, D401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .mypy_cache,
    migrations
enable-extensions = Q
select = E,W,F,C,N,Q
inline-quotes = single
docstring-quotes = single
multiline-quotes = single
